<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyl.mapper.UmsProjectMapper">
    
    <resultMap type="UmsProject" id="UmsProjectResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="applyContent" column="apply_content"/>
        <result property="createtime" column="createtime"/>
        <result property="contentName" column="content_name"/>
        <result property="status" column="status"/>
        <result property="explanation" column="explanation"/>
    </resultMap>

    <sql id="selectUmsProjectVo">
        select id, user_id, apply_content, createtime, content_name, status, explanation  from ums_project
    </sql>

    <select id="selectByEntity" parameterType="UmsProject" resultMap="UmsProjectResult">
        <include refid="selectUmsProjectVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="applyContent != null  and applyContent != ''"> and apply_content = #{applyContent}</if>
            <if test="createtime != null "> and createtime = #{createtime}</if>
            <if test="contentName != null  and contentName != ''"> and content_name like concat('%', #{contentName}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="explanation != null  and explanation != ''"> and explanation = #{explanation}</if>
        </where>
    </select>

    <update id="updateDelFlagByIds">
        update ums_project set del_flag=1
        <where>
            id in <foreach collection="ids" open="(" item="it" close=")" separator=",">#{it}</foreach>
        </where>
    </update>
</mapper>
